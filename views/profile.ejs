<%- include('partials/header') -%>
<div class="container">
  
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
      </div>
      <div class="mt-5">
        <h2>Add a menu item</h2>
        
        <div class="row">
          <div class="col">Sequence</div>
          <div class="col">Name of Food Item</div>
          <div class="col">Description</div>
          <div class="col">Category</div>
          <div class="col">Price</div>
          <div class="col">Picture</div>
        </div>
        
        <form action="/post/createPost" enctype="multipart/form-data" method="POST" class="row">
          <div class="col">
              <label for="title" class="form-label"></label>
              <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="col">
            <label for="caption" class="form-label"></label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="col">
            <label for="caption" class="form-label"></label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="col">
            <label for="caption" class="form-label"></label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="col">
            <label for="caption" class="form-label"></label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="col">
            <label for="imgUpload" class="form-label"></label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>